{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "plugin:react/recommended",
    "plugin:flowtype/recommended"
  ],
  "plugins": ["react", "flowtype", "graphql"],
  "rules": {
    "react/prop-types": "warn",
    "react/jsx-no-bind": [
      "error",
      {
        "allowArrowFunctions": true
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "globals": {
    "fetch": false
  }
}
